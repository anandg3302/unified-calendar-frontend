# Backend Configuration
# For Android emulator, use 10.0.2.2 to connect to localhost
# For physical devices, use your computer's local IP address
EXPO_PUBLIC_BACKEND_URL="http://unified-calendar-frontend-tdp2.vercel.app"

# Android Network Security
# This allows cleartext traffic for development
# Remove in production
EXPO_PUBLIC_ANDROID_CLEARTEXT_TRAFFIC=true

# Development mode
NODE_ENV=development
EXPO_USE_FAST_RESOLVER="1"

# Metro cache location (optional, keep as is)
METRO_CACHE_ROOT=/app/frontend/.metro-cache
